<% flash.each do |name, msg| %>
  <%= name %>: <%= msg %>
<% end %>
</br></br>

<table border="1">
	<tr>
		<th>ID</th>
		<th>Feed ID</th>
		<th>Title</th>
		<th>link</th>
		<th>Pub date</th>
		<th>Delete?</th>
	</tr>

	<tbody>
    <% if @posts.empty? %>
      <strong> No posts yet</strong>
    <% else %>
    	<% @posts.each do |post| %>
    		<tr>
    			<td><%= post.id %></td>
    			<td><%= post.feed_id %></td>
          <td><%= post.title %></td>
          <td><%= post.link %></td>
          <td><%= post.pub_date %></td>
          <td><%= link_to 'Delete post', post, :method => :delete %></td>
    		</tr>
    	<% end %>
		<% end %>
	</tbody>
</table>

